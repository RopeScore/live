{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "app",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [{
        "source": "/favicon.ico",
        "destination": "/static/img/icon.png"
      },
      {
        "source": "**",
        "function": "app"
      }
    ],
    "ignore": []
  }
}